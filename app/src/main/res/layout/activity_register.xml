<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="katzpipko.com.story.RegisterActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">



        <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainProgress"  android:visibility="gone"></ProgressBar>


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/registerProfilePic"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:src="@drawable/avatar"
            android:textAlignment="center"
            />




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp"

                android:text="Email"/>

            <EditText
                android:id="@+id/registerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="0dp"
                android:text=""
               />



        </LinearLayout>



        <LinearLayout android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp"
                android:text="First Name"

                />

            <EditText

                android:id="@+id/registerFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp" android:inputType="text"
                android:text=""
                />
        </LinearLayout>


        <LinearLayout android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp"
                android:text="Last Name"/>

            <EditText

                android:id="@+id/registerLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text=""
                android:layout_marginTop="0dp" android:inputType="text"
                />
        </LinearLayout>



        <LinearLayout android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp"
                android:text="Password"/>

            <EditText

                android:id="@+id/registerPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text=""
                android:layout_marginTop="0dp" android:inputType="textPassword"
                />
        </LinearLayout>




        <LinearLayout android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="0dp"
                android:text="Password Hint"/>

            <EditText

                android:id="@+id/registerPasswordVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:layout_marginTop="0dp" android:inputType="textPassword"
                />
        </LinearLayout>





        <LinearLayout android:layout_width="match_parent" android:gravity="center" android:layout_height="match_parent">


            <Button
                android:id="@+id/registerRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:text="Register"/>





        </LinearLayout>



    </LinearLayout>





</android.support.constraint.ConstraintLayout>
